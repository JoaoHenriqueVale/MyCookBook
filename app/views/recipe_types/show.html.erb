<h1><%=@recipe_type.name%></h1>
<main>
<% if @recipe_type.recipes.empty? %>
  <p>Nenhuma receita encontrada para este tipo de receitas</p>
<% else %>
  <% @recipe_type.recipes.each do |recipe_type| %>
    <%= render recipe_type %>
  <% end %>
<% end %>
</main>
<%= link_to 'Editar', edit_recipe_type_path%>
<%= link_to 'Voltar', root_path%>
